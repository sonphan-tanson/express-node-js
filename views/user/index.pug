extends ../layout/comon

block content

    .container
        .row
            .col-12.pt-5
                form.form-group.d-flex.align-items-center(action="/user/search",method="get")
                    a.btn.btn-primary(href="/user/create") New
                    input.form-control(type="text",placeholder="tim kiem",name="name") 
                    br
                    button.btn.btn-primary search

                table.table
                    tr
                        th Name
                        th Phone
                        th Actions
                    
                    each user in listUser
                        tr
                            td
                                img(src=user.avatar, alt="",width="32")
                            td=user.name
                            td=user.phone    
                            td
                                a.btn.btn-light(href= '/user/view/' + user.id)  view
                        
            
                
    